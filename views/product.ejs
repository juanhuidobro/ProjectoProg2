<%- include('./partials/header') %>
	
	<!-- product detail -->
	<div class="container products-wrapper">
		<div class="d-flex align-items-center">
			<h2 class="products-title"><%=producto.marca%></h2> 
			<p class="product-detail-description">
				<a href="home/product-add">Editar</a>
			</p>
		</div>
		<div class="product-detail">
			<div class="row">
				<article class="col-12 col-lg-8 product-detail-info">
					<img src="<%=producto.imagen%>" alt="Koenigsegg" class="product-detail-img">
					<p class="product-detail-description">
						<%=producto.descripcion%></p>
				</article>
				<div class="col-12 col-lg-4">

					<%if(comentarios.length==0){%> 
                        <h1>no existen comentarios para este producto</h1>
					<%}else { %>
						<%for(let i=0;i<comentarios.length;i+=1){%> 
						<div class="img-container offset-3 col-2">
							<img src="/images/products/default-image.png" alt="foto de perfil" class="foto-perfil">
						</div>

						<div class="data">
							<p class="user">
							<strong> <a href="/usuarios/users/<%=comentarios[i].usuario.id%>"><%=comentarios[i].usuario.nombre%></a> </strong>
							<%=comentarios[i].texto%></p> 
						<%	} %>

				<%	} %>

				<form class="form" action="/productos/comentarios/<%= producto.id %>" method="POST">

					<p>
							<label for="Descripcion"> Comentario </label>
							<input type="text" placeholder="Comentario" name="texto" id="Comentario">
					</p>
						
				
						<!--<p>
							<label for="Fecha">Fecha</label>
							<input type="text" placeholder="Fecha" name="Fecha" id="Fecha">
						</p> -->

						<p>
							<button type="submit" class="buy-now-button">AGREGAR COMENTARIO</button>
						</p>
							
						
					</form>
					
					<hr>

				</div>
			</div>
		</div>
	</div>
	<!-- /product detail -->

	<!-- footer -->
	<%- include("./partials/footer") %>
	<!-- /footer -->

	