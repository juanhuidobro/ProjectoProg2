<!DOCTYPE html>
<html lang="es">
<!-- Include Head -->
<head>
	<meta charset="UTF-8">
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<link width="" rel="shortcut icon" href="./images/logoTerminado.png" />
	
	<title> Car O </title>
			<!-- Font Awesome Stylesheet -->
	<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.11.2/css/all.min.css">
	<!-- Bootstrap Grid Stylesheet -->
	<link rel="stylesheet" href="./stylesheets/bootstrap-grid.min.css">
	<!-- Own Stylesheet -->
	<link rel="stylesheet" href="./stylesheets/app.css">
</head>
<body>

	<%-include('./partials/headerDeslogueado')%>

	
	<!-- Banner -->
	<div class="banner">
		<img src="images/home-banner.jpeg" alt="Banner de ofertas">
	</div>
	<!-- /Banner -->

	<!-- Novedades -->
	<div class="container products-wrapper">
		<div class="row">
			<div class="col-12">
				<h2 class="products-title">Novedades</h2>
			</div>
			<% productos.forEach(function(producto){ %>
				<div class="col-12 col-sm-6 col-lg-3">
					<section class="product-box">
						<a href="/product/<%-producto.id %>">
							<figure class="product-box_image">
								<img src="<%-producto.imagen %>" alt="koenigsegg">
							</figure>
							<article class="product-box_data">
								<h2><%=producto.marca %></h2>
								<p><%-producto.modelo %></p>
								<p><%-producto.descripcion %></p>
								<p>Comentarios: 6</p>
							</article>
						</a>
					</section>
				</div>
		    <% }); %>
			
		</div>
	</div>
	

	<!-- footer -->
	<%- include("./partials/footer") %>
	<!-- /footer -->
</body>	
</html>